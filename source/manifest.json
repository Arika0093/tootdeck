{
    "description": "画面は開発中のものです",
    "icons": {
        "128": "icon-128.png",
        "16": "icon-16.png",
        "48": "icon-48.png"
    },
    "manifest_version": 2,
    "name": "TootDeck",
    "version": "1",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "https://*/*"
    ],
    "content_scripts":[
        {
            "matches":["https://tweetdeck.twitter.com/"],
            "js":["jquery.min.js","tootdeck.js"]
         }
    ],
    "web_accessible_resources":[
        "*.*"
    ],
    "browser_action": {
        "default_icon": {
            "19": "icon-16.png",
            "48": "icon-48.png"
        }
    }
}
